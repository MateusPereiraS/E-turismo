<%- include('../partials/institucional/navbar.ejs') %>
<%- include('../partials/msg.ejs') %>


<div class="container-fluid tm-container-content">
    <section id="multiple-column-form">
    <div class="row mb-4">
         <h1 class="tm-text-primary text-center">
            <%= cidade.titulo %>
         </h1>
    </div>
    <div class="row mb-4">
        <h4 class="tm-text-primary text-center" style="font-size: 20px;white-space:pre-line;line-height: 23px;">
           <%= cidade.mensagem %>
        </h4>
   </div>

    <div class="tm-hero d-flex justify-content-center align-items-center">
        <form class="d-flex tm-search-form">
            <input class="form-control tm-search-input" name="nome" value="<%- pesquisa %>" type="search" placeholder="Nome do Local..." aria-label="Search">
            <button class="btn btn-outline-success tm-search-btn mr-3" type="submit">
                <i class="fas fa-search"></i>
            </button><% if (filtroExist) { %> <a href="/" class="btn text-danger">Limpar filtro <i class="fas fa-map-marker-alt"></i></a><% } else { %> <% } %>
        </form>
    </div>

    
        <div class="row mb-4 ml-4">
            <h2 class="col-md font-rb">
                Pontos tur√≠sticos
            </h2>
        </div>
        <div class="row tm-mb-90 tm-gallery ml-1 mr-1">
            <% locais.forEach(function(local) { %>
        	<div style="height: 260px;width: 400px;margin-top: 90px;" class="mr-2 mb-3 img-fluid" > 
                <figure class="effect-ming tm-video-item ">
                    <% local.conteudoLocal.forEach(function(img) { %>
                        <% if(img.imgcapa === true){ %>             
                    <img src="/locais-img/<%= local._id %>/<%= img.img %>" style="height: 260px;width: 400px;" class="img-fluid" >             
                    <figcaption class="d-flex align-items-center justify-content-center mb-4">
                        <h2><%= local.nome %></h2>
                        <a href="/detalhes-local/<%= local._id %>"></a>                      
                    </figcaption>     
                    <% } else { %> <% } %>
                    <% }); %>                
                </figure>
                <div class="d-flex justify-content-between tm-text-gray" style="margin-top:-10px">
                    <span class="col-5 tm-text-primary"><%= local.nome %></span>
                    <% if (local.avaliacao.avaliacaoAtiva === true) { %>
                        <div class="rate condition-inative" style="margin-top: -10px;">
                            <input type="radio" id="star5" value="5" <% if(local.notaMedia == 5 || !local.notaMedia) { %> checked <% } else { %> <% } %>/>
                            <label for="star5" title="text">5 stars</label>
                            <input type="radio" id="star4"  value="4" <% if(local.notaMedia == 4 ) { %> checked <% } else { %> <% } %>/>
                            <label for="star4" title="text">4 stars</label>
                            <input type="radio" id="star3" value="3" <% if(local.notaMedia == 3 ) { %> checked <% } else { %> <% } %>/>
                            <label for="star3" title="text">3 stars</label>
                            <input type="radio" id="star2"  value="2" <% if(local.notaMedia  == 2 ) { %> checked <% } else { %> <% } %>/>
                            <label for="star2" title="text">2 stars</label>
                            <input type="radio" id="star1" value="1" <% if(local.notaMedia == 1 ) { %> checked <% } else { %> <% } %>/>
                            <label for="star1" title="text">1 star</label>               
                    </div>
                    <% } else { %> <% } %>
                </div>       
            </div> 
            <% }); %> 
        </div> 
        </section>
    </div> 

    <footer class="tm-bg-gray pt-5 pb-3 tm-text-gray tm-footer">
        <div class="container-fluid tm-container-small">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-12 px-5 mb-5">
