<script>
    window.onload = function() {
          $('#locais').addClass("active");
          $('#locais2').addClass("active");
          $('#locais3').addClass("active");
      }
  </script>
    <div id="app">
        <%- include('../../partials/admin/menu.ejs') %>
        <div id="main">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="page-heading">
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-start">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Locais</li>
                        </ol>
                    </nav>
                </div>
                <br><br>
                <div class="page-title mt-4">
                    <div class="row">
                        <div class="col-12 col-md-6 order-md-1 order-last">
                            <h3>Locais</h3>
                            <p class="text-subtitle text-muted">Gerencie seu cadastro de locais.</p>
                        </div>
                        
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-start mt-5">
                   <a href="/locais/add-local"> <button type="button"
                        class="btn btn-primary me-1 mb-1">Cadastrar novo</button></a>                                   
               </div>
                <section class="section">
                    <div class="card">
                       
                        <div class="card-body">
                            <table class="table table-striped" id="table1">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Endereço</th>
                                        <th>Número</th>
                                        <th>Bairro</th>
                                        <th>Status</th>
                                        <th>Editar</th>
                                    </tr>
                                </thead>
                                <tbody>    
                                    <% locais.forEach(function(local) { %>                          
                                    <tr>
                                        <td><%= local.nome %></td>
                                        <td><%= local.endereco %></td>
                                        <td><%= local.numero %></td>
                                        <td><%= local.bairro %></td>
                                        <% if (local.situacao == 'pendente') { %>
                                            <td>
                                                <span class="badge bg-warning">pendente</span>
                                            </td>
                                            <form method="POST" action="/locais/concluir-cadastro">
                                                <input type="text" name="idLocal" value="<%= local._id %>" hidden readonly>
                                               
                                            <td><button style="background: none;border: none;" type="submit"><i class="fas fa-pen text-primary"> </button></i></td>
                                        </form>
                                        <% } else { %>
                                        <td>
                                            <span <% if (local.statusAtivo === true) { %> class="badge bg-success">Ativo</span>  <% } else { %>  class="badge bg-danger">Inativo</span>  <% } %>
                                        </td>
                                        <td><a href="/locais/edit-local/<%= local._id %>"><button style="background: none;border: none;" type="button"><i class="fas fa-pen text-primary"></i></button></a></td>
                                        <% } %>
                                    </tr>
                                    <% }); %> 
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
  